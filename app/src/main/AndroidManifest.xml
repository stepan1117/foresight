<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stepan.foresight" >
    <uses-permission android:name="android.permission.CAMERA" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >



        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PurchaseListActivity"
            android:label="@string/title_activity_purchase_list" >
        </activity>
        <activity
            android:name=".NewShoppingItemActivity"
            android:label="@string/title_activity_new_shopping_item" >
        </activity>
        <activity
            android:name=".activity.SimpleScannerActivity"
            android:label="@string/title_activity_simple_scanner_activity" >
        </activity>
    </application>

</manifest>
